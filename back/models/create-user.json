{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "User sign up schema",
    "required": [
        "name","email","password"
    ],
    "properties": {
        "name": {
            "type": "string",
            "title": "The user name",
            "pattern": "^[a-zA-Z0-9]+$"
        },
        "email": {
            "type": "string",
            "title": "The user email"
        },
        "password": {
            "type": "string",
            "title": "The user password",
            "pattern": "^[a-zA-Z0-9]+$"
        }
    }
}